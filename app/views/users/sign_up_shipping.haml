-# ここからpまでが新規登録画面5　住所画面
.register5_header
  .register5_header_logo
    = image_tag 'mercari_logo.png'
    -# 写真は本番のときに改めて差し替える
  .register5_header_status_bar
    %span{class: "register5_header_status_bar_information"} 会員情報
    %span{class: "register5_header_status_bar_phone"} 電話番号認証
    %span{style: "color: red;",class: "register5_header_status_bar_adress"} お届け先住所入力
    %span{class: "register5_header_status_bar_payment"} 支払い方法
    %span{class: "register5_header_status_bar_accomplish"} 完了
    %hr
    %hr.red_line
.register_user_register5
  .register_user_register5_contents
    %h1 発送元・お届け先住所入力
    = form_with(model: @shipping, url: sign_up_credit_users_path, class: "register_user_register5_contents_form", local: true) do |f|

      .field
        = f.label :"お名前（全角）"
        = f.text_field :first_name_kanji, placeholder: "例)長宗我部", value: (Faker::Name.last_name)
        = f.text_field :last_name_kanji, placeholder: "例)元親", value: (Faker::Name.first_name)
      .field
        = f.label :"お名前カナ（全角）"
        = f.text_field :first_name_kana, placeholder: "例)チョウソカベ", value: "キラ"
        = f.text_field :last_name_kana, placeholder: "例)モトチカ", value: "ヨシカゲ"
      .field
        = f.label :"郵便番号"
        = f.text_field :zipcode, placeholder: "例)123-4567", value:"123-0855"
      .field
        = f.label :"都道府県"
        = f.collection_select :pref, Prefecture.all, :id, :name, {prompt: '---'}
      .field
        = f.label :"市区町村"
        = f.text_field :city, placeholder: "例)港区",value:"杜王町"
      .field
        = f.label :"番地"
        = f.text_field :address, placeholder: "例)白金6-9-5",value:"浄禅寺1-128"
      .field
        = f.label :"建物名",class:"form-nini"
        = f.text_field :building, placeholder: "例)フィボナッチビルディング1123"
      .field
        = f.label :"電話",class:"form-nini"
        = f.text_field :phone, placeholder: "例)09058132134",value:"0034341212"
      = f.submit "次へ進む", class: "btn"
      %br
