-# ここからpまでが新規登録画面4　住所画面
.register_header
  .register_header_logo
    = image_tag '/mercari_logo.png'
    -# 写真は本番のときに改めて差し替える
  .register_header_status_bar
    %span{class: "register_header_status_bar_information"} 会員情報
    %span{class: "register_header_status_bar_phone"} 電話番号認証
    %span{style: "color: red;",class: "register_header_status_bar_adress"} お届け先住所入力
    %span{class: "register_header_status_bar_payment"} 支払い方法
    %span{class: "register_header_status_bar_accomplish"} 完了
    %hr
    %hr.red_line
.register_user_register4
  .register_user_register4_contents
    %h1 発送元・お届け先住所入力
    = form_with(model: @shipping, url: users_sign_up_payment_confirmation_path, class: "register_user_register4_contents_form", local: true) do |f|

      .field
        = f.label :"お名前（全角）"
        = f.text_field :first_name_kanji, placeholder: "例)長宗我部"
        = f.text_field :last_name_kanji, placeholder: "例)元親"
      .field
        = f.label :"お名前カナ（全角）"
        = f.text_field :first_name_kana, placeholder: "例)チョウソカベ"
        = f.text_field :last_name_kana, placeholder: "例)モトチカ"
      .field
        = f.label :"郵便番号"
        = f.text_field :zipcode, placeholder: "例)123-4567"
      .field
        = f.label :"都道府県"
        = f.text_field :pref, placeholder: "例)123-4567"
      .field
        = f.label :"市区町村"
        = f.text_field :city, placeholder: "例)港区"
      .field
        = f.label :"番地"
        = f.text_field :address, placeholder: "例)白金6-9-5"
      .field
        = f.label :"建物名",class:"form-nini"
        = f.text_field :building, placeholder: "例)フィボナッチビルディング1123"
      .field
        = f.label :"電話",class:"form-nini"
        = f.text_field :phone, placeholder: "例)09058132134"
      = f.submit "次へ進む", class: "btn"
      %br
