.side-bar
  .search-nav
    %ul.search-nav__list
      %li
        = link_to "#" do
          並び替え
          %i.fas.fa-chevron-down
    .search-nav__dropdown
      .search-nav__dropdown__title 詳細検索
      = form_with(url: search_items_path, method: :get, class: "search-nav__dropdown__form", local: true) do |f|

        = f.label :keyword, class: "search-nav__dropdown__form__list" do
          %i.fas.fa-plus
          %span キーワードを追加する
        = f.search_field :keyword, placeholder: "例）値下げ", class: "search-nav__dropdown__form__search", value: @keyword

        = f.label :category, class: "search-nav__dropdown__form__list" do
          %i.fas.fa-list-ul
          %span カテゴリーを選択する

        #category__parent
          %i.fas.fa-chevron-down.search-arrow
          =select_tag :category_id, options_for_select(@categories.map{|i| [i.name, i.id]}), { prompt: 'すべて', class: 'search-root' , id: "search-category-root"}
        #category__child
          - @categories.each do |c|
            = select_tag :category_id, options_for_select(c.children.map{|i| [i.name, i.id]}), { prompt: 'すべて', class: 'search-root search-category-child hide', id: "category_#{c.id}" }
            - c.children.each do |cc|
              .check-boxes.hide{id: "category_#{cc.id}"}
                = f.collection_check_boxes :grandchild_ids, cc.children, :id, :name, include_hidden: false do |b|
                  .check-boxes__content
                    = b.check_box(class:"search-checkbox")
                    = b.label(class:"search-checkbox__label"){b.text}


        = f.label :brand, class: "search-nav__dropdown__form__list" do
          %i.fas.fa-tag
          %span ブランド名から探す
        = f.search_field :brand, placeholder: "例）シャネル", class: "search-nav__dropdown__form__search"

        = f.label :size, class: "search-nav__dropdown__form__list" do 
          %i.fab.fa-jenkins
          %span サイズを指定する
        = f.collection_select( :size_id, @categories, :id, :name,{prompt: "すべて"}, {class: "search-root"})
        %i.fas.fa-chevron-down.search-arrow

        = f.label :price, class: "search-nav__dropdown__form__list" do 
          %i.fas.fa-coins
          %span 価格
        %i.fas.fa-chevron-down.search-arrow

        = f.collection_select( :price_id, @categories, :id, :name,{prompt: "選択してください"}, {class: "search-root"})
        
        = f.number_field :min, placeholder: "¥ Min", class: "price-child"
        %span ~
        = f.number_field :max, placeholder: "¥ Max", class: "price-child"        
        
        = f.label :condition, class: "search-nav__dropdown__form__list" do 
          %i.fas.fa-star
          %span 商品状態
        .check-boxes
          = f.collection_check_boxes :condition_ids, @categories, :id, :name, include_hidden: false  do |b|
            .check-boxes__content
              = b.check_box(class:"search-checkbox")
              = b.label(class:"search-checkbox__label"){b.text}

        = f.label :cost_burden, class: "search-nav__dropdown__form__list" do
          %i.fas.fa-truck.fa-flip-horizontal
          %span 配送料の負担
        .check-boxes
          = f.collection_check_boxes :cost_burden, @categories, :id, :name, include_hidden: false  do |b|
            .check-boxes__content
              = b.check_box(class:"search-checkbox")
              = b.label(class:"search-checkbox__label"){b.text}

        = f.label :status, class: "search-nav__dropdown__form__list" do 
          %i.fas.fa-shopping-cart
          %span 販売状況
        .check-boxes
          = f.collection_check_boxes :status_id, @categories, :id, :name, include_hidden: false  do |b|
            .check-boxes__content
              = b.check_box(class:"search-checkbox")
              = b.label(class:"search-checkbox__label"){b.text}
        
        .sidebar__search-btns
          = f.submit type: :reset, value: "クリア", class: "sidebar__search-btn", id: "search__reset"
          = f.submit value: "完了", class: "sidebar__search-btn sidebar__search-btn--red"