.register_header
  .register_header_logo
    = image_tag '/mercari_logo.png'

.sell-main
  .sell-main__box
    .sell-content
      %h2.sell-content__header
        商品の情報を入力  

      .sell-content__form
        .sell-upload-box
          %h3.sell-upload-box__head
            出品画像
            %span 必須
          %p 最大10枚までアップロードできます
          .sell-upload-box__drop
            %label
              .drop-box-input
                ドラックアンドドロップ
                %br
                またはクリックしてファイルをアップロード
              %input.image{multiple: "", name: "image1", display: "none",type: "file"}/

              
              
              -# = file_field :image, class: 'hidden'


        .sell-item
          .sell-item__name
            商品名
            %span 必須
            .sell-item__name__input
              %input.input-default{placeholder: "商品名（必須 40文字まで)", value: ""}/
          .sell-item__discription
            商品の説明
            %span 必須
            .sell-item__discription__text
              %textarea.textarea-default{placeholder: "商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。", rows: "5"}

        .sell-content
          %h3.sell-content__head
            商品の詳細
          .sell-content__select-box
            .select-pulldown
              カテゴリー
              %span 必須

              .select-wrap
                %i.fas.fa-chevron-down

                %select.select-default
                  %option{value: ""} ---
                  %option{value: "1"} レディース
                  %option{value: "2"} メンズ
                  %option{value: "259"} ベビー・キッズ
                  %option{value: "387"} インテリア・住まい・小物
                  %option{value: "517"} 本・音楽・ゲーム
                  %option{value: "576"} おもちゃ・ホビー・グッズ
                  %option{value: "683"} コスメ・香水・美容
                  %option{value: "781"} 家電・スマホ・カメラ
                  %option{value: "867"} スポーツ・レジャー
                  %option{value: "976"} ハンドメイド
                  %option{value: "1026"} チケット
                  %option{value: "1085"} 自動車・オートバイ
                  %option{value: "138"} その他

          .sell-content__select-add-box
            .select-pulldown
              商品の状態
              %span 必須

              .select-wrap
                %i.fas.fa-chevron-down

                %select.select-default
                  %option{value: ""} ---
                  %option{value: "1"} 新品、未使用
                  %option{value: "2"} 未使用に近い
                  %option{value: "3"} 目立った傷や汚れなし
                  %option{value: "4"} やや傷や汚れあり
                  %option{value: "5"} 傷や汚れあり
                  %option{value: "1328"} 全体的に状態が悪い

        .sell-content
          %h3.sell-content__head
            配送について
          .sell-content__select-box
            .select-pulldown
              配送料の負担
              %span 必須

              .select-wrap
                %i.fas.fa-chevron-down

                %select.select-default
                  %option{value: ""} ---
                  %option{value: "1"} 送料込み(出品者負担)
                  %option{value: "2"} 着払い(購入者負担)


          .sell-content__select-add-box
            .select-pulldown
              発送元の地域
              %span 必須

              .select-wrap
                %i.fas.fa-chevron-down

                %select.select-default
                  %option{value: ""} ---
                  %option{value: "1"} 北海道
                  %option{value: "2"} 青森県
                  %option{value: "3"} 岩手県
                  %option{value: "4"} 宮城県
                  %option{value: "5"} 秋田県
                  %option{value: "6"} 山形県
                  %option{value: "7"} 福島県
                  %option{value: "8"} 茨城県
                  %option{value: "9"} 栃木県
                  %option{value: "10"} 群馬県
                  %option{value: "11"} 埼玉県
                  %option{value: "12"} 千葉県
                  %option{value: "13"} 東京都
                  %option{value: "14"} 神奈川県
                  %option{value: "15"} 新潟県
                  %option{value: "16"} 富山県
                  %option{value: "17"} 石川県
                  %option{value: "18"} 福井県
                  %option{value: "19"} 山梨県
                  %option{value: "20"} 長野県
                  %option{value: "21"} 岐阜県
                  %option{value: "22"} 静岡県
                  %option{value: "23"} 愛知県
                  %option{value: "24"} 三重県
                  %option{value: "25"} 滋賀県
                  %option{value: "26"} 京都府
                  %option{value: "27"} 大阪府
                  %option{value: "28"} 兵庫県
                  %option{value: "29"} 奈良県
                  %option{value: "30"} 和歌山県
                  %option{value: "31"} 鳥取県
                  %option{value: "32"} 島根県
                  %option{value: "33"} 岡山県
                  %option{value: "34"} 広島県
                  %option{value: "35"} 山口県
                  %option{value: "36"} 徳島県
                  %option{value: "37"} 香川県
                  %option{value: "38"} 愛媛県
                  %option{value: "39"} 高知県
                  %option{value: "40"} 福岡県
