- items.first(6).each do |item|
  %li.list_item
    = link_to item_path(item) do
      .item-box-show
        - if item.status_id != 1
          .item-box-show__sold
            sold
        - if item&.pictures != nil
          %img.lazyloaded.is-higher-width{:alt => item.name, "data-src" => item.name, :src => item.pictures.first.image.url}
        %h2.item-box-show_item_name
          = item.name
        %h2.item-box-show_item_price
          = "Â¥" + item.price.to_s(:delimited)