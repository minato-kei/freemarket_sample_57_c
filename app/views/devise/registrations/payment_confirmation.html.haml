-# ここからpまでが新規登録画面4　住所画面
.register_header
  .register_header_logo
    = image_tag '/mercari_logo.png'
    -# 写真は本番のときに改めて差し替える
  .register_header_status_bar
    %span{class: "register_header_status_bar_information"} 会員情報
    %span{class: "register_header_status_bar_phone"} 電話番号認証
    %span{class: "register_header_status_bar_adress"} お届け先住所入力
    %span{style: "color: red;",class: "register_header_status_bar_payment"} 支払い方法
    %span{class: "register_header_status_bar_accomplish"} 完了
    %hr
    %hr.red_line4
.register_user_register4
  .register_user_register4_contents
    %h1 支払先
    = form_with(model: @posts, url:"#", class: "register_user_register4_contents_form") do |f|
      .field
        = f.label :"カード番号　"
        = f.text_field :number, placeholder: "半角数字のみ"
        %p
      .field
        = f.label :"有効期限　"
        .field_expire_form
          = f.date_select :cardexpire_year, discard_month: true, discard_day: true, start_year: 2000, end_year: Time.current.year + 20, default: { year: Time.current.year}
          %span 年
          = f.date_select :cardexpire_month, discard_year: true, discard_day: true, use_month_numbers: true, default: {month: 1}
          %span 月
      .field.field_security_code
        = f.label :"セキュリティコード　"
        = f.text_field :security_code, placeholder: "カード背面4桁もしくは3桁の番号"
        = link_to "カード裏面の番号とは？", "#"
      = link_to "次へ進む", "#", class: "btn"
      %br
-#       = link_to "本人情報の登録について＞", "#", style: "text-align: right;"

